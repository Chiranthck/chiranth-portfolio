    <script>
        // Storage for final project images and Google Drive links
        let projectImages = {
            maruti: null,
            radish: null,
            fire: null
        };

        let projectImageUrls = {
            maruti: '',
            radish: '',
            fire: ''
        };

        let projectLinks = {
            maruti: { gallery: '', video: '', docs: '' },
            radish: { gallery: '', video: '', docs: '' },
            fire: { gallery: '', video: '', docs: '' }
        };

        // Handle image selection for final result
        function selectImage(project) {
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function(e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        // Store image data
                        projectImages[project] = event.target.result;
                        
                        // Save to localStorage
                        saveImagesToStorage();
                        
                        // Update the upload slot
                        updateImageSlot(project, event.target.result);
                        
                        // Update main project card image
                        updateMainProjectImage(project, event.target.result);
                        
                        // Update modal image
                        updateModalImage(project, event.target.result);
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        }

        // Update image slot
        function updateImageSlot(project, imageSrc) {
            const slot = document.querySelector(`[data-project="${project}"]`);
            if (slot) {
                slot.innerHTML = `
                    <img src="${imageSrc}" alt="Final Project Result">
                    <button class="remove-btn" onclick="event.stopPropagation(); removeImage('${project}')">×</button>
                `;
                slot.classList.add('has-image');
            }
        }

        // Update main project card image
        function updateMainProjectImage(project, imageSrc) {
            const mainImage = document.getElementById(`${project}-main-image`);
            if (mainImage) {
                mainImage.style.backgroundImage = `url(${imageSrc})`;
                mainImage.innerHTML = '<div class="project-image-text">View Project Details</div>';
            }
        }

        // Update modal image
        function updateModalImage(project, imageSrc) {
            const modalImage = document.getElementById(`${project}-modal-image`);
            if (modalImage) {
                modalImage.style.backgroundImage = `url(${imageSrc})`;
                modalImage.textContent = '';
            }
        }

        // Remove image
        function removeImage(project) {
            // Remove from storage
            projectImages[project] = null;
            
            // Save to localStorage
            saveImagesToStorage();
            
            // Reset image slot
            const slot = document.querySelector(`[data-project="${project}"]`);
            if (slot) {
                slot.innerHTML = `
                    <div class="image-placeholder">Click to upload your final project image<br><small>This will be displayed on the card and modal</small></div>
                    <button class="remove-btn" onclick="event.stopPropagation(); removeImage('${project}')">×</button>
                `;
                slot.classList.remove('has-image');
            }
            
            // Reset main project image
            const mainImage = document.getElementById(`${project}-main-image`);
            if (mainImage) {
                mainImage.style.backgroundImage = '';
                const icons = {
                    maruti: '🚗 Maruti 800 Electrical System',
                    radish: '🌱 Radish Yield Optimization',
                    fire: '🔥 IoT Fire Protection System'
                };
                mainImage.innerHTML = `
                    <div class="project-image-text">View Project Details</div>
                    <span>${icons[project]}</span>
                `;
            }
            
            // Reset modal image
            const modalImage = document.getElementById(`${project}-modal-image`);
            if (modalImage) {
                modalImage.style.backgroundImage = '';
                const icons = {
                    maruti: '🚗 Upload your final project image to see it here',
                    radish: '🌱 Upload your final project image to see it here',
                    fire: '🔥 Upload your final project image to see it here'
                };
                modalImage.textContent = icons[project];
            }
        }

        // Toggle edit mode for links
        function toggleEditMode(project) {
            const displayDiv = document.getElementById(`${project}-links-display`);
            const editDiv = document.getElementById(`${project}-links-edit`);
            
            if (editDiv.style.display === 'none') {
                displayDiv.style.display = 'none';
                editDiv.style.display = 'block';
                
                // Populate current values
                document.getElementById(`${project}-gallery-input`).value = projectLinks[project].gallery;
                document.getElementById(`${project}-video-input`).value = projectLinks[project].video;
                document.getElementById(`${project}-docs-input`).value = projectLinks[project].docs;
            } else {
                displayDiv.style.display = 'block';
                editDiv.style.display = 'none';
            }
        }

        // Save individual link
        function saveLink(project, type) {
            const input = document.getElementById(`${project}-${type}-input`);
            const url = input.value.trim();
            
            if (url && isValidUrl(url)) {
                // Store the link
                projectLinks[project][type] = url;
                
                // Update the display link
                updateDisplayLink(project, type, url);
                
                // Update modal link
                updateModalLink(project, type, url);
                
                // Save to localStorage
                saveLinksToStorage();
                
                // Show success feedback
                input.style.borderColor = '#28a745';
                setTimeout(() => {
                    input.style.borderColor = '#ddd';
                }, 1000);
            } else if (url === '') {
                // Clear the link
                projectLinks[project][type] = '';
                updateDisplayLink(project, type, '');
                updateModalLink(project, type, '');
                saveLinksToStorage();
            } else {
                // Show error
                input.style.borderColor = '#dc3545';
                alert('Please enter a valid URL (must start with http:// or https://)');
                setTimeout(() => {
                    input.style.borderColor = '#ddd';
                }, 2000);
            }
        }

        // Validate URL
        function isValidUrl(string) {
            try {
                new URL(string);
                return string.startsWith('http://') || string.startsWith('https://');
            } catch (_) {
                return false;
            }
        }

        // Update display link
        function updateDisplayLink(project, type, url) {
            const linkElement = document.getElementById(`${project}-${type}-link`);
            if (!linkElement) return;
            
            const linkTexts = {
                gallery: {
                    maruti: '📸 Complete Photo Gallery',
                    radish: '📸 Experimental Setup Photos',
                    fire: '📸 Prototype Development Photos'
                },
                video: {
                    maruti: '🎥 Project Demo Video',
                    radish: '🎥 Process Documentation Video',
                    fire: '🎥 System Demo & Testing Video'
                },
                docs: {
                    maruti: '📋 Technical Documentation',
                    radish: '📊 Statistical Analysis Data',
                    fire: '🔧 Technical Specifications'
                }
            };
            
            if (url && isValidUrl(url)) {
                linkElement.href = url;
                linkElement.target = '_blank';
                linkElement.rel = 'noopener noreferrer';
                linkElement.className = 'media-link';
                linkElement.textContent = linkTexts[type][project];
                
                // Remove any event listeners that might conflict
                linkElement.onclick = null;
            } else {
                linkElement.href = 'javascript:void(0)';
                linkElement.removeAttribute('target');
                linkElement.removeAttribute('rel');
                linkElement.className = 'media-link disabled';
                linkElement.textContent = linkTexts[type][project] + ' - Click edit to add link';
                
                // Prevent any default action for disabled links
                linkElement.onclick = function(e) {
                    e.preventDefault();
                    return false;
                };
            }
        }

        // Update modal link
        function updateModalLink(project, type, url) {
            const modalElement = document.getElementById(`${project}-modal-${type}`);
            if (modalElement) {
                if (url) {
                    modalElement.href = url;
                    modalElement.target = '_blank';
                    modalElement.rel = 'noopener noreferrer';
                    modalElement.className = 'modal-link';
                } else {
                    modalElement.href = '#';
                    modalElement.removeAttribute('target');
                    modalElement.removeAttribute('rel');
                    modalElement.className = 'modal-link-placeholder';
                }
            }
        }

        // Modal functionality
        function openModal(projectId) {
            const modal = document.getElementById(projectId + 'Modal');
            if (modal) {
                modal.style.display = 'block';
                document.body.style.overflow = 'hidden';
            } else {
                // If modal not found, try alternative approach
                const alternativeModal = document.querySelector(`[id*="${projectId}"]`);
                if (alternativeModal) {
                    alternativeModal.style.display = 'block';
                    document.body.style.overflow = 'hidden';
                }
            }
        }

        function closeModal(projectId) {
            const modal = document.getElementById(projectId + 'Modal');
            if (modal) {
                modal.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        }

        // Close modal when clicking outside
        window.addEventListener('click', function(event) {
            if (event.target.classList.contains('modal')) {
                event.target.style.display = 'none';
                document.body.style.overflow = 'auto';
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const href = this.getAttribute('href');
                
                // Only process if it's a valid hash link and not empty
                if (href && href.length > 1 && href.startsWith('#')) {
                    const target = document.querySelector(href);
                    if (target) {
                        target.scrollIntoView({
                            behavior: 'smooth',
                            block: 'start'
                        });
                    }
                }
            });
        });

        // Add scroll effect to header
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.background = 'rgba(255, 255, 255, 0.98)';
            } else {
                header.style.background = 'rgba(255, 255, 255, 0.95)';
            }
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            // Load saved images from localStorage
            const savedImages = localStorage.getItem('portfolioImages');
            if (savedImages) {
                try {
                    const images = JSON.parse(savedImages);
                    Object.keys(images).forEach(project => {
                        if (images[project]) {
                            projectImages[project] = images[project];
                            updateImageSlot(project, images[project]);
                            updateMainProjectImage(project, images[project]);
                            updateModalImage(project, images[project]);
                        }
                    });
                } catch (e) {
                    // Could not load saved images
                }
            }

            // Load saved image URLs from localStorage
            const savedImageUrls = localStorage.getItem('portfolioImageUrls');
            if (savedImageUrls) {
                try {
                    const imageUrls = JSON.parse(savedImageUrls);
                    projectImageUrls = { ...projectImageUrls, ...imageUrls };
                } catch (e) {
                    // Could not load saved image URLs
                }
            }

            // Load saved links from localStorage
            const savedLinks = localStorage.getItem('portfolioLinks');
            if (savedLinks) {
                try {
                    const links = JSON.parse(savedLinks);
                    projectLinks = { ...projectLinks, ...links };
                    
                    // Update all display links
                    ['maruti', 'radish', 'fire'].forEach(project => {
                        ['gallery', 'video', 'docs'].forEach(type => {
                            if (projectLinks[project][type]) {
                                updateDisplayLink(project, type, projectLinks[project][type]);
                                updateModalLink(project, type, projectLinks[project][type]);
                            }
                        });
                    });
                } catch (e) {
                    // Could not load saved links
                }
            }
            
            // Portfolio loaded successfully
        });

        // Save images to localStorage
        function saveImagesToStorage() {
            try {
                localStorage.setItem('portfolioImages', JSON.stringify(projectImages));
                localStorage.setItem('portfolioImageUrls', JSON.stringify(projectImageUrls));
            } catch (e) {
                // Could not save images to storage
            }
        }

        // Save image as URL for persistence
        function saveImageAsUrl(project) {
            const currentImage = projectImages[project];
            if (!currentImage) {
                alert('Please upload an image first before saving as URL');
                return;
            }
            
            // Show URL input section
            const urlSection = document.getElementById(`${project}-image-url`);
            urlSection.style.display = 'block';
            
            alert('To make your image permanent:\n\n1. Go to imgbb.com (free, no signup needed)\n2. Upload your image\n3. Copy the "Direct link"\n4. Paste it below and click Load\n\nThis will make your image visible to admission committees!');
        }

        // Load image from URL
        function loadImageFromUrl(project) {
            const input = document.getElementById(`${project}-image-url-input`);
            const url = input.value.trim();
            
            if (!url) {
                alert('Please enter an image URL');
                return;
            }
            
            // Test if the URL is a valid image
            const img = new Image();
            img.onload = function() {
                // Store the URL
                projectImageUrls[project] = url;
                projectImages[project] = url;
                
                // Update displays
                updateImageSlot(project, url);
                updateMainProjectImage(project, url);
                updateModalImage(project, url);
                
                // Save to localStorage
                saveImagesToStorage();
                
                // Hide URL section and show success
                document.getElementById(`${project}-image-url`).style.display = 'none';
                input.style.borderColor = '#28a745';
                alert('✅ Image loaded successfully! This image will now persist across browsers.');
                
                setTimeout(() => {
                    input.style.borderColor = '#ddd';
                    input.value = '';
                }, 2000);
            };
            
            img.onerror = function() {
                input.style.borderColor = '#dc3545';
                alert('❌ Could not load image from this URL. Please check:\n• URL is correct\n• Image is publicly accessible\n• URL points directly to an image file');
                setTimeout(() => {
                    input.style.borderColor = '#ddd';
                }, 2000);
            };
            
            img.src = url;
        }

        // Save links to localStorage
        function saveLinksToStorage() {
            try {
                localStorage.setItem('portfolioLinks', JSON.stringify(projectLinks));
            } catch (e) {
                // Could not save links to storage
            }
        }

        // Fullscreen functionality
        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                document.documentElement.requestFullscreen().catch(err => {
                    alert(`Error attempting to enable fullscreen: ${err.message}`);
                });
            } else {
                document.exitFullscreen();
            }
        }

        // Update fullscreen button text
        document.addEventListener('fullscreenchange', function() {
            const btn = document.getElementById('fullscreen-btn');
            if (document.fullscreenElement) {
                btn.textContent = '⛶ Exit Fullscreen';
            } else {
                btn.textContent = '⛶ Fullscreen';
            }
        });
    </script>
</body>
</html>System Demo & Testing Video - Click edit to add link
                                    </a>
